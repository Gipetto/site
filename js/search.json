---
---
{%- assign date_format = site.minima.date_format | default: "%b %-d, %Y" -%}
[
{%- for post in site.posts -%}
{"title":{{ post.title | jsonify}},"date":"{{ post.date | date: date_format }}","tokens":"{{ post.excerpt | tokenize }}","excerpt":{{ post.excerpt | strip_html | normalize_whitespace | truncate: 250 | jsonify}},"url": "{{ post.url }}",
  {%- if post.categories -%}"categories" :[
    {%- for category in post.categories -%} "{{ category }}"
    {%- if forloop.last %}{% else %},{% endif -%}
    {%- endfor -%}
    ],
  {%- endif -%}
  {%- if post.categories == nil -%}"categories" :[],{%- endif -%}
  {%- if post.tags -%} "tags"  : [
    {%- for tag in post.tags -%}"{{ tag }}"
    {%- if forloop.last %}{% else %},{% endif -%}
    {%- endfor -%}
    ]
  {%- endif -%}
  {%- if post.tags == nil -%}"tags" :[]{%- endif -%}
}
{%- unless forloop.last %},{% endunless -%}
{%- endfor -%}
]